<html XMLNS:SKLADList>
<IMPORT NAMESPACE="SKLADList" IMPLEMENTATION="htc/listview2.htc">
<head>
<link href="style.css" type=text/css rel=stylesheet>
<script language="jscript" src="common.js"></script>
<script language="Jscript">
sessionid="#(%session.SessionId)#";

function load(){
hist.LoadHeaders();
templ.LoadHeaders();
}

function Item(PlanID,clname){
PlanID=ReturnSpace(PlanID)
mok=window.showModalDialog("DictItem.csp",PlanID+";"+clname,"cener:yes;status:no;dialogHeight:400px;dialogWidth:400px;resizable:yes;")
if(mok==1){ShowTempl()}
}

function ShowHist(){
hist.DownLoad();
}

function ShowTempl(){
templ.DownLoad();
}

function ShowInstr(){
//	instr.DownLoad();
}

function ItemInstr(item){
//	item=ReturnSpace(item)
//	mok=window.showModalDialog("DictItem.csp",item+";"+instr.ClassName,"cener:yes;status:no;dialogHeight:400px;dialogWidth:400px;resizable:yes;")
//	if(mok==1){ShowInstr()}
}

function ShowTemps(){
CurOper.style.display="none";
OperTempl.style.display="";
}

function ShowCurrent(){
OperTempl.style.display="none";	
CurOper.style.display="";
}
</script>
</head>
<body onload="load()">
<TABLE cellSpacing=0 width="100%" celpadding="0" >
<TR><TD align=center style="BACKGROUND: rgb(233,243,255); FONT-size: 18px ; font-family: arial; COLOR: rgb(0,0,102); BORDER-BOTTOM: rgb(0,0,102) 1px solid" colspan=2><strong>Операции</strong></TD></tr>
</TABLE>
<table width=100%><tr><td valign=top>
<sklad:Button value="Шаблоны операций" onclick="ShowTemps()"><br>
<sklad:Button value="Текущие операции" onclick="ShowCurrent()"></td>
<td width=100% valign=top>
<fieldset id="CurOper"><legend>Текущие операции</legend>
 <SKLADList:listview width=100% height=150 id="hist" onAddColumns="ShowHist()" ClassName="Operation.OperationHistory" zonDblClick="Item(hist.ItemID,hist.ClassName)" /><br>
  <sklad:LittleButton name="new" id="newtov1" onclick="Item('',hist.ClassName)" alt="Создать запись">
  <sklad:LittleButton name="edit" id="edititem" onclick="Item(hist.ItemID)" alt="Редактировать запись">
</fieldset>

<fieldset id="OperTempl" style="display:none"><legend>Шаблоны операций</legend>
 <SKLADList:listview width=100% height=150 id="templ" onAddColumns="ShowTempl()" ClassName="Operation.OperTemplate" zonDblClick="Item(templ.ItemID,templ.ClassName)" /><br>
  <sklad:LittleButton name="new" id="newtov11" onclick="Item('',templ.ClassName)" alt="Создать запись">
  <sklad:LittleButton name="edit" id="edititem1" onclick="Item(templ.ItemID,templ.ClassName)" alt="Редактировать запись">
</fieldset>
</td></tr>
</table>
</body>
</html>