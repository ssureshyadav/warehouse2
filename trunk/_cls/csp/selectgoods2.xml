	Write "GoodsForDoc.LoadHeaders(""izdelie,Description,Composition"");",!
	Write "//alert(""depot\n""+depot+""commongroups\n""+commongroups);",!
	Write "//Catalogues.startDownload(strForGroups(depot,commongroups), putCatalogue);",!
	Write "LoadTree()",!
