<html>
<head>
<link href="style.css" type=text/css rel=stylesheet>
<script language="jscript" src="common.js"></script>
<title>	Cache Server Page </title>
<script language="javascript">
var Progress="#server(Common.Sync.Progress())#";
function startFun(){
	#call(Common.Sync.Synchronization2())#;
	window.location.reload();
}

function lookup(){
Progress="#server(Common.Sync.Progress())#";
load();
if(!ReturnBoolean(Progress))
	{
	ShowResult();
	window.clearInterval(timerID);
	}
}

function ShowResult(){
CurrentProgress.innerHTML=#server(Common.Sync.ShowResult())#;
}

function load(){
	return
if(ReturnBoolean(Progress))
	{
	SyncLabel.innerText='..Идёт синхронизация';
	ShowResult();
	}
else{SyncLabel.innerText='Данные синхронизации';}
}

function Export(){
var result=#server(Common.Sync.ExportSyncFile())#
if(result.split("@")[0]==1){ExportedFile.innerText="Экспортировано в файл: "+result.split("@")[1];}
else{alert("Ошибка\n"+result)}
}

function Import(){
var file=oFile1.value
var result=#server(Common.Sync.ImportSyncFile(file))#
if(result==1){alert("Данные успешно загружены.")}
else{alert(result)}
}

function ReloadPage(){
window.location.reload()
}
</script>
</head>

